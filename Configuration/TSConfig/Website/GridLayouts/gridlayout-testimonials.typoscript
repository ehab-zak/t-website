// defining grid layout for testimonials section
tx_gridelements.setup {

	websitesTestimonials {
		title = LLL:EXT:websites/Resources/Private/Language/locallang.xlf:gridlayouts_testimonials_title
		description = LLL:EXT:websites/Resources/Private/Language/locallang.xlf:gridlayouts_testimonials_description
		config {
			colCount = 1
			rowCount = 1
			rows {
				1 {
					columns {
						1 {
							name = LLL:EXT:websites/Resources/Private/Language/locallang.xlf:layouts_column_content
							colPos = 109
							allowed = testimonial
						}
					}
				}
			}
		}
		icon = EXT:websites/Resources/Public/Icons/GridLayouts/testimonials.gif
	}

}
