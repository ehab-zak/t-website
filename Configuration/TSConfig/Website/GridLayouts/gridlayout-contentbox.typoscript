// defining grid layout for testimonials section
tx_gridelements.setup {

	websitesContentbox {
		title = LLL:EXT:websites/Resources/Private/Language/locallang.xlf:gridlayouts_contentbox_title
		description = LLL:EXT:websites/Resources/Private/Language/locallang.xlf:gridlayouts_contentbox_description
		config {
			colCount = 1
			rowCount = 1
			rows {
				1 {
					columns {
						1 {
							name = LLL:EXT:websites/Resources/Private/Language/locallang.xlf:layouts_column_content
							colPos = 116
						}
					}
				}
			}
		}
		icon = EXT:websites/Resources/Public/Icons/GridLayouts/contentbox.gif
	}

}