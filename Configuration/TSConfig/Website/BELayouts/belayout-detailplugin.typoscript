// defining backend layout for default (sub) page
mod {
	web_layout {
		BackendLayouts {

			websitesDetailplugin {
				title = LLL:EXT:websites/Resources/Private/Language/locallang.xlf:backendlayouts_detailplugin_title
				description = LLL:EXT:websites/Resources/Private/Language/locallang.xlf:backendlayouts_detailplugin_description
				config {
					backend_layout {
						colCount = 1
						rowCount = 1
						rows {
							1 {
								columns {
									1 {
										name = LLL:EXT:websites/Resources/Private/Language/locallang.xlf:layouts_column_content
										colPos = 0
									}
								}
							}
						}
					}
				}
				icon = EXT:websites/Resources/Public/Icons/BELayouts/detailplugin.gif
			}

		}
	}
}
