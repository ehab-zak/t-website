// defining backend layout for storage of images in slider
mod {
	web_layout {
		BackendLayouts {

			websitesStorageImageSlider {
				title = LLL:EXT:websites/Resources/Private/Language/locallang.xlf:backendlayouts_storageimageslider_title
				description = LLL:EXT:websites/Resources/Private/Language/locallang.xlf:backendlayouts_storageimageslider_description
				config {
					backend_layout {
						colCount = 1
						rowCount = 1
						rows {
							1 {
								columns {
									1 {
										name = LLL:EXT:websites/Resources/Private/Language/locallang.xlf:layouts_col_imageslider
										colPos = 1
									}
								}
							}
						}
					}
				}
				icon = EXT:websites/Resources/Public/Icons/BELayouts/storage.gif
			}

		}
	}
}
